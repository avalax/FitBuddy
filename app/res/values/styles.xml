<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="PagerTitleStrip">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">108dp</item>
    </style>

    <style name="PagerOverflow">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/activated_background</item>
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
</resources>