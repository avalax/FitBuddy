<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_background"
    android:orientation="vertical">

    <de.avalax.fitbuddy.app.resultChart.ResultChartView
        android:id="@+id/resultChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="42dp" />

    <include layout="@layout/menu_exercise_result_actions"/>

    <TextView
        android:id="@+id/resultChartEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/padding_result_bar_text"
        android:text="@string/edit_label_default_text"
        android:textColor="@color/main_text"
        android:textSize="@dimen/font_size" />

</FrameLayout>