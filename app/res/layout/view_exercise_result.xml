<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pager_background">
    <de.avalax.fitbuddy.app.resultChart.ResultChartView
        android:id="@+id/resultChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="42dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusTendencyImageView"
        android:layout_gravity="left|bottom"
        android:src="@drawable/ic_action_tendency_negative"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/neutralTendencyImageView"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_action_tendency_neutral"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusTendencyImageView"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_action_tendency_positive"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_label_default_text"
        android:id="@+id/resultChartEditText"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/padding_result_bar_text"
        android:textColor="@color/main_text"
        android:textSize="@dimen/font_size"/>

</FrameLayout>