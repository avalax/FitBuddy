<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_vertical_view"
    android:paddingRight="@dimen/padding_vertical_view">

    <EditText
        android:id="@+id/exerciseNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_bottom_view"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/new_exercise_name"
        android:inputType="textAutoComplete" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_bottom_view"
        android:drawableLeft="@drawable/ic_action_accept"
        android:onClick="clickEvent"
        android:text="@string/action_save" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_action_cancel"
        android:onClick="clickEvent"
        android:text="@string/action_cancel" />
</LinearLayout>