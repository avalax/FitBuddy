<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <ImageView
            android:id="@+id/verticalProgressBar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/vertical_bar_contentDescription"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/vertical_bar_default_text"
              android:id="@+id/valueTextView"
              android:layout_gravity="center"
              android:textColor="@color/main_text"
              android:textSize="@dimen/bar_font_size"
              android:textStyle="bold"
              android:layout_marginBottom="@dimen/padding_bar_text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vertical_bar_default_text"
            android:id="@+id/maxValueTextView"
            android:layout_gravity="center"
            android:textColor="@color/main_text"
            android:textSize="@dimen/bar_font_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/padding_bar_text"/>
</merge>