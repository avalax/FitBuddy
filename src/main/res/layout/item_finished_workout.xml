<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="6dip">

    <TextView
        android:id="@+id/finished_workout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/new_workout_name"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/primary_progressbar"/>

    <TextView
        android:id="@+id/finished_workout_date"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finished_workout_title"
        android:layout_marginStart="5dp"
        android:drawableStart="@drawable/ic_action_go_to_today"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/edit_sets_bar_title"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>
</RelativeLayout>