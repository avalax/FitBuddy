<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/secondaryDarkColor"
                android:startColor="@color/primaryDarkColor" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="@color/secondaryLightColor"
                    android:startColor="@color/primaryLightColor" />
            </shape>
        </clip>
    </item>
</layer-list>